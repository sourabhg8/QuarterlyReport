@model List<MonthlyReport.Models.Marketing>
@{
    ViewBag.Title = "Events/Activations";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int role = Convert.ToInt32(Session["roleid"].ToString());
}

@if (role == 1 || role == 5)
{
    <div class="row">
        <div class="col-sm-10">

        </div>
        <div class="col-sm-2">
            @Html.ActionLink("Edit", "MarketingEdit", "Marketing", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}
<br />
<br />

<div class="row">
    <div class="col-sm-6">
        @if (ViewBag.extension1 == "none")
        {
            <div style=" border : 1px solid black; height : 400px; width : 90%;">
                <img src="@Url.Content("~/Uploads/default.jpg")" class="" alt="Cinque Terre" height="40" width="40" style="margin-left : 45%; margin-top : 24%">
            </div>
