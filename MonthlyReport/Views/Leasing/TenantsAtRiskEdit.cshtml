@model IEnumerable<MonthlyReport.Models.TenantsAtRisk>
@{
    ViewBag.Title = "TENANT AT RISK";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<script type="text/javascript">
    function resetform() {
        $("input:text").val("");

        $("textarea").val("");
    };

</script>

<div class="row">
    <div class="col-sm-10">

    </div>
    <div class="col-sm-1">
        <button class="btn btn-primary" onclick="resetform();">Reset</button>
    </div>
    <div class="col-sm-1">
        @Html.ActionLink("Cancel", "Index", "Leasing", null, new { @class = "btn btn-primary" })
    </div>
</div>

@using (Html.BeginForm("TenantsAtRiskEdit", "Leasing", FormMethod.Post))
{

    <div class="row">
        <div class=" col-sm-6">
            <h5><strong>TENANT AT RISK</strong></h5>
        </div>
        <div class=" col-sm-2">
            @*<select id="month" name="month" class=" form-control">
                    <option value="">--Select--</option>
                    <option value="January">January</option>
                    <option value="February">February</option>
                    <option value="March">March</option>
                    <option value="April">April</option>
                    <option value="May">May</option>
                    <option value="June">June</option>
                    <option value="July">July</option>
                    <option value="August">August</option>
                    <option value="September">September</option>
                    <option value="October">October</option>
                    <option value="November">November</option>
                    <option value="Decemeber">Decemeber</option>

                </select>*@
        </div>

    </div>
    <br />

    <div class="row">
        <table class=" table" style="width:100% ;border : none; border-collapse : collapse" !important>
            <tr style="border-bottom : 2px solid Black; border-top : 2px solid Black; padding-bottom : 10px" class="MetricBold" !important>
                <th style="width : 15%; border-right : 1px solid black; vertical-align : middle"><h5 class="closetotable">Tenant</h5></th>
                <th style="width : 10%; border-right : 1px solid black; vertical-align : middle" class="textaligncenter"><h5 class="closetotable">Unit No.</h5></th>
                <th style="width : 10%; border-right : 1px solid black; vertical-align : middle" class="textaligncenter"><h5 class="closetotable">GLA</h5></th>
                <th style="width : 10%; border-right : 1px solid black; vertical-align : middle" class="textaligncenter"><h5 class="closetotable">GROC</h5></th>
                <th style="width : 10%; border-right : 1px solid black; vertical-align : middle" class="textaligncenter"><h5 class="closetotable">Sales/SF</h5></th>
                <th style="width : 10%; border-right : 1px solid black; vertical-align : middle" class="textaligncenter"><h5 class="closetotable">Rolling<br />12 Sales</h5></th>
                <th style="width : 10%; border-right : 1px solid black; vertical-align : middle" class="textaligncenter"><h5 class="closetotable">AR YTD</h5></th>
                <th style="width : 25%; vertical-align : middle" class="textaligncenter"><h5 class="closetotable">Comments</h5></th>
            </tr>
            @foreach (var obj in Model)
            {
                i++;
                <tr style="border-bottom : 1px solid Black;" class="MetricName" !important>
                    <th style="width : 15%; border-right : 1px solid black">
                        <input type="text" value="@obj.Tenant" name=@("Tenant" + i) id=@("Tenant" + i) class="form-control" style=" width : 100%;font-size : 14px; border : none" />
                    </th>
                    <th style="width : 10%; border-right : 1px solid black">
                        <input type="text" value="@obj.UnitNo" name=@("UnitNo" + i) id=@("UnitNo" + i) class="form-control" style=" width : 100%;font-size : 14px; border : none" />
                    </th>
                    <th style="width : 10%; border-right : 1px solid black">
                        <input type="text" value="@obj.Gla" name=@("Gla" + i) id=@("Gla" + i) class="form-control" style=" width : 100%;font-size : 14px; border : none" />
                    </th>
                    <th style="width : 10%; border-right : 1px solid black">
                        <div style="float: left; width : 90%;">
                            <input type="text" value="@obj.Groc" name=@("Groc" + i) id=@("Groc" + i) class="form-control" style=" width : 100%;font-size : 14px; border : none" onblur="checkPercentage(this)" />
                        </div><div style="float : left; width : 8%">%</div>
                    </th>

                    <th style="width : 10%; border-right : 1px solid black">
                        <div style="float : left; width : 8%">$</div><div style="float: left; width : 90%;">
                            <input type="text" value="@obj.Sales" name=@("Sales" + i) id=@("Sales" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
                        </div>
                    </th>

                    <th style="width : 10%; border-right : 1px solid black">
                        <div style="float : left; width : 8%">$</div><div style="float: left; width : 90%;">
                            <input type="text" value="@obj.RollingSales" name=@("RollingSales" + i) id=@("RollingSales" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
                        </div>
                    </th>

                    <th style="width : 10%; border-right : 1px solid black">
                        <div style="float : left; width : 8%">$</div><div style="float: left; width : 90%;">
                            <input type="text" value="@obj.ArYtd" name=@("ArYtd" + i) id=@("ArYtd" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
                        </div>
                    </th>
                    <th style="width : 25%; ">
                        <textarea name=@("comment" + i) rows="3" style="width : 100%; font-size : 14px; border : none" class="">@obj.Comments</textarea>
                    </th>
                </tr>
            }

        </table>
    </div>
    <div class="row">
        <div class="col-sm-11"></div><div class="col-sm-1"> <input type="submit" value="Save" class="btn btn-primary" /></div>
    </div>
}



