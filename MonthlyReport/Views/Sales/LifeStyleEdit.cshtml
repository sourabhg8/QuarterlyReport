                        <input type="text" value="@obj.PctRent" name=@("PctRent" + i) id=@("PctRent" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
                    </div>
                </td>
                <td style="width : 4%; border-right : 2px solid black">
                    <div style="float: left; width : 90%;">
                        <input type="text" value="@obj.Groc" name=@("Groc" + i) id=@("Groc" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" />
                    </div><div style="float : left; width : 8%">%</div>
                </td>
                <td style="width : 8%; border-right : 1px solid black">
                    <div style="float : left; width : 8%">$</div><div style="float: left; width : 90%;">
                        <input type="text" value="@obj.Sales3" name=@("Sales3" + i) id=@("Sales3" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
                    </div>
                </td>
                <td style="width : 8%; border-right : 1px solid black">
                    <div style="float : left; width : 8%">$</div><div style="float: left; width : 90%;">
                        <input type="text" value="@obj.PSF3" name=@("PSF3" + i) id=@("PSF3" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
                    </div>
