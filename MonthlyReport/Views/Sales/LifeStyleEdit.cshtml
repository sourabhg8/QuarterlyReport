                    </div>
                </td>
                <td style="width : 7%; border-right : 1px solid black">
                    <div style="float : left; width : 8%">$</div><div style="float: left; width : 90%;">
                        <input type="text" value="@obj.PSF2" name=@("PSF2" + i) id=@("PSF2" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
                    </div>
                </td>
                <td style="width : 4%; border-right : 1px solid black">
                    <div style="float: left; width : 90%;">
                        <input type="text" value="@obj.LY2" name=@("LY2" + i) id=@("LY2" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" />
                    </div><div style="float : left; width : 8%">%</div>
                </td>
                <td style="width : 8%; border-right : 1px solid black">
                    <div style="float : left; width : 8%">$</div><div style="float: left; width : 90%;">
                        <input type="text" value="@obj.GrossRent" name=@("GrossRent" + i) id=@("GrossRent" + i) class="form-control textboxrightalign" style=" width : 100%;font-size : 14px; border : none" onblur="focuslost(this)" />
